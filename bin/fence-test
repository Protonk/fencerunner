#!/usr/bin/env bash
set -euo pipefail

# Runs the Rust fence-test binary built under target/.
script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)
repo_root=$(cd "${script_dir}/.." >/dev/null 2>&1 && pwd)

binary="${repo_root}/target/release/fence-test"
if [[ ! -x "${binary}" ]]; then
  binary="${repo_root}/target/debug/fence-test"
fi

if [[ ! -x "${binary}" ]]; then
  echo "fence-test binary not found. Build it with 'cargo build --release'." >&2
  exit 1
fi

export CODEX_FENCE_ROOT="${CODEX_FENCE_ROOT:-${repo_root}}"
exec "${binary}" "$@"
